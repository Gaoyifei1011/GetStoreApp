<ContentDialog
    x:Class="GetStoreApp.UI.Dialogs.Common.AppRunningDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    Title="{x:Bind root:ResourceService.GetLocalized('Resources/AppDisplayName')}"
    BorderBrush="{ThemeResource ContentDialogBorderThemeBrush}"
    CloseButtonText="{x:Bind root:ResourceService.GetLocalized('Resources/OK')}"
    Content="{x:Bind root:ResourceService.GetLocalized('Resources/AppIsRunning')}"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d" />
