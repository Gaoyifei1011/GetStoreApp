<Page
    x:Class="GetStoreApp.Views.Pages.DownloadingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="using:GetStoreApp.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="using:GetStoreApp.Extensions.DataType.Enums"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:GetStoreApp.Models"
    xmlns:roothelper="using:GetStoreApp.Helpers.Root"
    xmlns:rootservice="using:GetStoreApp.Services.Root"
    xmlns:system="using:System"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <XamlUICommand x:Name="ContinueCommand" ExecuteRequested="{x:Bind OnContinueExecuteRequested}" />
        <XamlUICommand x:Name="DeleteCommand" ExecuteRequested="{x:Bind OnDeleteExecuteRequested}" />
        <XamlUICommand x:Name="PauseCommand" ExecuteRequested="{x:Bind OnPauseExecuteRequested}" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  下载中文件控制栏  -->
        <Grid
            Grid.Row="0"
            Height="60"
            Margin="30,0,30,3"
            Padding="16,8,0,8"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{StaticResource ControlCornerRadius}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <FontIcon
                Grid.Column="0"
                Margin="0,0,12,0"
                FontSize="16"
                Glyph="&#xE74C;" />

            <TextBlock
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/Operation')}" />

            <AppBarSeparator Grid.Column="2" Margin="10,0,10,0" />

            <TextBlock
                Grid.Column="3"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/DownloadingEmpty')}"
                Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(DownloadingCollection.Count), Mode=OneWay}" />

            <TextBlock
                Grid.Column="3"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="{x:Bind x:String.Format(DownloadingCountInfoString, DownloadingCollection.Count), Mode=OneWay}"
                Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(DownloadingCollection.Count), Mode=OneWay}" />

            <CommandBar
                Grid.Column="4"
                VerticalAlignment="Center"
                Background="Transparent"
                DefaultLabelPosition="Right">

                <CommandBar.PrimaryCommands>
                    <AppBarButton
                        Click="{x:Bind OnContinueAllClicked}"
                        IsEnabled="{x:Bind system:Convert.ToBoolean(DownloadingCollection.Count), Mode=OneWay}"
                        Label="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/ContinueAll')}"
                        Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsSelectMode), Mode=OneWay}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE74B;" />
                        </AppBarButton.Icon>

                        <ToolTipService.ToolTip>
                            <ToolTip
                                MaxWidth="9999"
                                Padding="0"
                                Background="Transparent">

                                <Grid>
                                    <SystemBackdropElement CornerRadius="{StaticResource ControlCornerRadius}" SystemBackdrop="{StaticResource AcrylicBackgroundFillColorDefaultBackdrop}" />
                                    <TextBlock Padding="{StaticResource ToolTipBorderPadding}" Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/ContinueAllToolTip')}" />
                                </Grid>
                            </ToolTip>
                        </ToolTipService.ToolTip>
                    </AppBarButton>

                    <AppBarButton
                        Click="{x:Bind OnPauseAllClicked}"
                        IsEnabled="{x:Bind system:Convert.ToBoolean(DownloadingCollection.Count), Mode=OneWay}"
                        Label="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/PauseAll')}"
                        Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsSelectMode), Mode=OneWay}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE769;" />
                        </AppBarButton.Icon>

                        <ToolTipService.ToolTip>
                            <ToolTip
                                MaxWidth="9999"
                                Padding="0"
                                Background="Transparent">

                                <Grid>
                                    <SystemBackdropElement CornerRadius="{StaticResource ControlCornerRadius}" SystemBackdrop="{StaticResource AcrylicBackgroundFillColorDefaultBackdrop}" />
                                    <TextBlock Padding="{StaticResource ToolTipBorderPadding}" Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/PauseAllToolTip')}" />
                                </Grid>
                            </ToolTip>
                        </ToolTipService.ToolTip>
                    </AppBarButton>

                    <AppBarButton
                        Click="{x:Bind OnSelectClicked}"
                        IsEnabled="{x:Bind system:Convert.ToBoolean(DownloadingCollection.Count), Mode=OneWay}"
                        Label="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/Select')}"
                        Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsSelectMode), Mode=OneWay}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE762;" />
                        </AppBarButton.Icon>

                        <ToolTipService.ToolTip>
                            <ToolTip
                                MaxWidth="9999"
                                Padding="0"
                                Background="Transparent">

                                <Grid>
                                    <SystemBackdropElement CornerRadius="{StaticResource ControlCornerRadius}" SystemBackdrop="{StaticResource AcrylicBackgroundFillColorDefaultBackdrop}" />
                                    <TextBlock Padding="{StaticResource ToolTipBorderPadding}" Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/SelectToolTip')}" />
                                </Grid>
                            </ToolTip>
                        </ToolTipService.ToolTip>
                    </AppBarButton>

                    <AppBarButton
                        Click="{x:Bind OnSelectAllClicked}"
                        Label="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/SelectAll')}"
                        Visibility="{x:Bind IsSelectMode, Mode=OneWay}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE8B3;" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton
                        Click="{x:Bind OnSelectNoneClicked}"
                        Label="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/SelectNone')}"
                        Visibility="{x:Bind IsSelectMode, Mode=OneWay}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE8E6;" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton
                        Click="{x:Bind OnDeleteSelectedClicked}"
                        Label="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/DeleteSelected')}"
                        Visibility="{x:Bind IsSelectMode, Mode=OneWay}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE74D;" />
                        </AppBarButton.Icon>

                        <ToolTipService.ToolTip>
                            <ToolTip
                                MaxWidth="9999"
                                Padding="0"
                                Background="Transparent">

                                <Grid>
                                    <SystemBackdropElement CornerRadius="{StaticResource ControlCornerRadius}" SystemBackdrop="{StaticResource AcrylicBackgroundFillColorDefaultBackdrop}" />
                                    <TextBlock Padding="{StaticResource ToolTipBorderPadding}" Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/DeleteSelectedToolTip')}" />
                                </Grid>
                            </ToolTip>
                        </ToolTipService.ToolTip>
                    </AppBarButton>

                    <AppBarButton
                        Click="{x:Bind OnCancelClicked}"
                        Label="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/Cancel')}"
                        Visibility="{x:Bind IsSelectMode, Mode=OneWay}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE711;" />
                        </AppBarButton.Icon>

                        <ToolTipService.ToolTip>
                            <ToolTip
                                MaxWidth="9999"
                                Padding="0"
                                Background="Transparent">

                                <Grid>
                                    <SystemBackdropElement CornerRadius="{StaticResource ControlCornerRadius}" SystemBackdrop="{StaticResource AcrylicBackgroundFillColorDefaultBackdrop}" />
                                    <TextBlock Padding="{StaticResource ToolTipBorderPadding}" Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/CancelToolTip')}" />
                                </Grid>
                            </ToolTip>
                        </ToolTipService.ToolTip>
                    </AppBarButton>
                </CommandBar.PrimaryCommands>
            </CommandBar>

            <Button
                Grid.Column="5"
                MinHeight="{ThemeResource AppBarThemeCompactHeight}"
                Margin="-6,0,0,0"
                Padding="{ThemeResource CommandBarMoreButtonMargin}"
                VerticalAlignment="Center"
                Foreground="{ThemeResource CommandBarForeground}"
                IsAccessKeyScope="True"
                Style="{ThemeResource EllipsisButton}">

                <FontIcon
                    Height="{ThemeResource AppBarExpandButtonCircleDiameter}"
                    VerticalAlignment="Center"
                    FontFamily="{ThemeResource SymbolThemeFontFamily}"
                    FontSize="20"
                    Glyph="&#xE712;" />

                <Button.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuFlyoutItem Click="{x:Bind OnOpenFolderClicked}" Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/OpenFolder')}">

                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE8B7;" />
                            </MenuFlyoutItem.Icon>

                            <ToolTipService.ToolTip>
                                <ToolTip
                                    MaxWidth="9999"
                                    Padding="0"
                                    Background="Transparent">

                                    <Grid>
                                        <SystemBackdropElement CornerRadius="{StaticResource ControlCornerRadius}" SystemBackdrop="{StaticResource AcrylicBackgroundFillColorDefaultBackdrop}" />
                                        <TextBlock Padding="{StaticResource ToolTipBorderPadding}" Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/OpenFolderToolTip')}" />
                                    </Grid>
                                </ToolTip>
                            </ToolTipService.ToolTip>
                        </MenuFlyoutItem>

                        <MenuFlyoutItem Click="{x:Bind OnUseInstructionClicked}" Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/UseInstruction')}">

                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE946;" />
                            </MenuFlyoutItem.Icon>

                            <ToolTipService.ToolTip>
                                <ToolTip
                                    MaxWidth="9999"
                                    Padding="0"
                                    Background="Transparent">

                                    <Grid>
                                        <SystemBackdropElement CornerRadius="{StaticResource ControlCornerRadius}" SystemBackdrop="{StaticResource AcrylicBackgroundFillColorDefaultBackdrop}" />
                                        <TextBlock Padding="{StaticResource ToolTipBorderPadding}" Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/UseInstructionToolTip')}" />
                                    </Grid>
                                </ToolTip>
                            </ToolTipService.ToolTip>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </Button.Flyout>

                <ToolTipService.ToolTip>
                    <ToolTip
                        MaxWidth="9999"
                        Padding="0"
                        Background="Transparent">

                        <Grid>
                            <SystemBackdropElement CornerRadius="{StaticResource ControlCornerRadius}" SystemBackdrop="{StaticResource AcrylicBackgroundFillColorDefaultBackdrop}" />
                            <TextBlock Padding="{StaticResource ToolTipBorderPadding}" Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/ViewMore')}" />
                        </Grid>
                    </ToolTip>
                </ToolTipService.ToolTip>
            </Button>
        </Grid>

        <!--  下载内容空提示栏  -->
        <Grid
            Grid.Row="1"
            Height="60"
            Margin="30,0,30,0"
            Padding="16,0"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{StaticResource ControlCornerRadius}"
            Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(DownloadingCollection.Count), Mode=OneWay}">

            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/DownloadingEmptyDescription')}"
                TextAlignment="Center" />
        </Grid>

        <!--  下载内容列表控件  -->
        <ListView
            Grid.Row="2"
            Padding="30,0,30,30"
            IsItemClickEnabled="{x:Bind IsSelectMode, Mode=OneWay}"
            ItemClick="{x:Bind OnItemClick}"
            ItemsSource="{x:Bind DownloadingCollection}"
            SelectionMode="None"
            Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(DownloadingCollection.Count), Mode=OneWay}">

            <ListView.ItemContainerStyle>
                <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="MinHeight" Value="0" />
                    <Setter Property="Padding" Value="0" />
                </Style>
            </ListView.ItemContainerStyle>

            <ItemsControl.ItemContainerTransitions>
                <TransitionCollection />
            </ItemsControl.ItemContainerTransitions>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:DownloadingModel">
                    <Grid
                        Height="60"
                        Margin="0,0,0,2"
                        Padding="16,0"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource ControlCornerRadius}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <CheckBox
                            Grid.Column="0"
                            MinWidth="0"
                            Margin="0,0,6,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                            IsThreeState="False"
                            Visibility="{x:Bind IsSelectMode, Mode=OneWay}">

                            <ToolTipService.ToolTip>
                                <ToolTip
                                    MaxWidth="9999"
                                    Padding="0"
                                    Background="Transparent">

                                    <Grid>
                                        <SystemBackdropElement CornerRadius="{StaticResource ControlCornerRadius}" SystemBackdrop="{StaticResource AcrylicBackgroundFillColorDefaultBackdrop}" />
                                        <Grid Padding="{StaticResource ToolTipBorderPadding}">
                                            <TextBlock Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/Selected')}" Visibility="{x:Bind IsSelected, Mode=OneWay}" />
                                            <TextBlock Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/UnSelected')}" Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsSelected), Mode=OneWay}" />
                                        </Grid>
                                    </Grid>
                                </ToolTip>
                            </ToolTipService.ToolTip>
                        </CheckBox>

                        <FontIcon
                            Grid.Column="1"
                            Margin="0,0,12,0"
                            FontSize="18"
                            FontWeight="Thin"
                            Glyph="&#xE958;"
                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Queued), Mode=OneWay}" />

                        <FontIcon
                            Grid.Column="1"
                            Margin="0,0,12,0"
                            FontSize="18"
                            FontWeight="Thin"
                            Glyph="&#xE896;"
                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Downloading), Mode=OneWay}" />

                        <FontIcon
                            Grid.Column="1"
                            Margin="0,0,12,0"
                            FontSize="18"
                            FontWeight="Thin"
                            Glyph="&#xE769;"
                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Paused), Mode=OneWay}" />

                        <FontIcon
                            Grid.Column="1"
                            Margin="0,0,12,0"
                            FontSize="18"
                            FontWeight="Thin"
                            Glyph="&#xEA39;"
                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Failed), Mode=OneWay}" />

                        <Grid
                            Grid.Column="2"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            RowSpacing="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    x:Name="FileNameText"
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Text="{x:Bind FileName}"
                                    TextAlignment="Left"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Padding="0"
                                            Background="Transparent"
                                            Visibility="{Binding ElementName=FileNameText, Path=IsTextTrimmed, Mode=OneWay}">

                                            <Grid>
                                                <SystemBackdropElement CornerRadius="{StaticResource ControlCornerRadius}" SystemBackdrop="{StaticResource AcrylicBackgroundFillColorDefaultBackdrop}" />
                                                <TextBlock Padding="{StaticResource ToolTipBorderPadding}" Text="{x:Bind FileName}" />
                                            </Grid>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </TextBlock>

                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Text="{x:Bind roothelper:SpeedHelper.ConvertSpeedToString(DownloadSpeed), Mode=OneWay}"
                                    TextAlignment="Right"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Downloading), Mode=OneWay}">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Padding="0"
                                            Background="Transparent">

                                            <Grid>
                                                <SystemBackdropElement CornerRadius="{StaticResource ControlCornerRadius}" SystemBackdrop="{StaticResource AcrylicBackgroundFillColorDefaultBackdrop}" />
                                                <TextBlock Padding="{StaticResource ToolTipBorderPadding}">
                                                    <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/CurrentSpeed')}" />
                                                    <Run Text="{x:Bind roothelper:SpeedHelper.ConvertSpeedToString(DownloadSpeed), Mode=OneWay}" />
                                                </TextBlock>
                                            </Grid>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </TextBlock>

                                <TextBlock
                                    Grid.Column="2"
                                    Margin="4,0,4,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="|"
                                    TextAlignment="Right"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Downloading), Mode=OneWay}" />

                                <TextBlock
                                    Grid.Column="3"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Text="{x:Bind roothelper:VolumeSizeHelper.ConvertVolumeSizeToString(CompletedSize), Mode=OneWay}"
                                    TextAlignment="Right"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Downloading), Mode=OneWay}">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Padding="0"
                                            Background="Transparent">

                                            <Grid>
                                                <SystemBackdropElement CornerRadius="{StaticResource ControlCornerRadius}" SystemBackdrop="{StaticResource AcrylicBackgroundFillColorDefaultBackdrop}" />
                                                <TextBlock Padding="{StaticResource ToolTipBorderPadding}">
                                                    <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/CompletedSize')}" />
                                                    <Run Text="{x:Bind roothelper:VolumeSizeHelper.ConvertVolumeSizeToString(CompletedSize), Mode=OneWay}" />
                                                </TextBlock>
                                            </Grid>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </TextBlock>

                                <TextBlock
                                    Grid.Column="4"
                                    Margin="4,0,4,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="|"
                                    TextAlignment="Right"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Downloading), Mode=OneWay}" />

                                <TextBlock
                                    Grid.Column="5"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Text="{x:Bind roothelper:VolumeSizeHelper.ConvertVolumeSizeToString(TotalSize), Mode=OneWay}"
                                    TextAlignment="Right">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Padding="0"
                                            Background="Transparent">

                                            <Grid>
                                                <SystemBackdropElement CornerRadius="{StaticResource ControlCornerRadius}" SystemBackdrop="{StaticResource AcrylicBackgroundFillColorDefaultBackdrop}" />
                                                <TextBlock Padding="{StaticResource ToolTipBorderPadding}">
                                                    <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/FileSize')}" />
                                                    <Run Text="{x:Bind roothelper:VolumeSizeHelper.ConvertVolumeSizeToString(TotalSize), Mode=OneWay}" />
                                                </TextBlock>
                                            </Grid>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </Grid>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/DownloadQueued')}"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Queued), Mode=OneWay}" />

                                <TextBlock
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/Downloading')}"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Downloading), Mode=OneWay}" />

                                <TextBlock
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/DownloadPaused')}"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Paused), Mode=OneWay}" />

                                <TextBlock
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/DownloadFailed')}"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Failed), Mode=OneWay}" />

                                <ProgressBar
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    IsIndeterminate="{x:Bind x:Object.Equals(DownloadProgressState, enum:DownloadProgressState.Queued), Mode=OneWay}"
                                    ShowError="{x:Bind x:Object.Equals(DownloadProgressState, enum:DownloadProgressState.Failed), Mode=OneWay}"
                                    ShowPaused="{x:Bind x:Object.Equals(DownloadProgressState, enum:DownloadProgressState.Paused), Mode=OneWay}"
                                    Value="{x:Bind converter:ValueConverterHelper.DownloadProgress(CompletedSize, TotalSize), Mode=OneWay}" />
                            </Grid>
                        </Grid>

                        <ContentControl
                            Grid.Column="3"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            IsEnabled="{x:Bind IsSelectMode.Equals(x:False), Mode=OneWay}">

                            <StackPanel Orientation="Horizontal">
                                <Button
                                    Width="32"
                                    Height="32"
                                    Margin="5,0,0,0"
                                    Padding="0"
                                    Command="{StaticResource ContinueCommand}"
                                    CommandParameter="{x:Bind}"
                                    CornerRadius="{StaticResource ControlCornerRadius}"
                                    IsEnabled="{x:Bind IsOperating.Equals(x:False), Mode=OneWay}"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Paused), Mode=OneWay}">

                                    <FontIcon FontSize="14" Glyph="&#xE768;" />

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Padding="0"
                                            Background="Transparent">

                                            <Grid>
                                                <SystemBackdropElement CornerRadius="{StaticResource ControlCornerRadius}" SystemBackdrop="{StaticResource AcrylicBackgroundFillColorDefaultBackdrop}" />
                                                <TextBlock Padding="{StaticResource ToolTipBorderPadding}" Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/Continue')}" />
                                            </Grid>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </Button>

                                <Button
                                    Width="32"
                                    Height="32"
                                    Margin="5,0,0,0"
                                    Padding="0"
                                    Command="{StaticResource PauseCommand}"
                                    CommandParameter="{x:Bind}"
                                    CornerRadius="{StaticResource ControlCornerRadius}"
                                    IsEnabled="{x:Bind IsOperating.Equals(x:False), Mode=OneWay}"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadingState(DownloadProgressState), Mode=OneWay}">

                                    <FontIcon FontSize="14" Glyph="&#xE769;" />

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Padding="0"
                                            Background="Transparent">

                                            <Grid>
                                                <SystemBackdropElement CornerRadius="{StaticResource ControlCornerRadius}" SystemBackdrop="{StaticResource AcrylicBackgroundFillColorDefaultBackdrop}" />
                                                <TextBlock Padding="{StaticResource ToolTipBorderPadding}" Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/Pause')}" />
                                            </Grid>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </Button>

                                <Button
                                    Width="32"
                                    Height="32"
                                    Margin="5,0,0,0"
                                    Padding="0"
                                    Command="{StaticResource DeleteCommand}"
                                    CommandParameter="{x:Bind}"
                                    CornerRadius="{StaticResource ControlCornerRadius}"
                                    IsEnabled="{x:Bind IsOperating.Equals(x:False), Mode=OneWay}">

                                    <FontIcon FontSize="14" Glyph="&#xE711;" />

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Padding="0"
                                            Background="Transparent">

                                            <Grid>
                                                <SystemBackdropElement CornerRadius="{StaticResource ControlCornerRadius}" SystemBackdrop="{StaticResource AcrylicBackgroundFillColorDefaultBackdrop}" />
                                                <TextBlock Padding="{StaticResource ToolTipBorderPadding}" Text="{x:Bind rootservice:ResourceService.GetLocalized('Downloading/Delete')}" />
                                            </Grid>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </Button>
                            </StackPanel>
                        </ContentControl>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>