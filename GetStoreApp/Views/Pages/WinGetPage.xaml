                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Command="{StaticResource CancelTaskCommand}"
                                            CommandParameter="{x:Bind}"
                                            IsEnabled="{x:Bind x:Object.Equals(PackageOperationResultKind, enum:PackageOperationResultKind.Normal), Mode=OneWay}"
                                            Style="{StaticResource AlternateCloseButtonStyle}"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageRepairProgressState(PackageRepairProgressState, deployment:PackageRepairProgressState.Finished, x:True), Mode=OneWay}">

                                            <Button.Content>
                                                <FontIcon
                                                    Margin="4"
                                                    FontSize="16"
                                                    Glyph="&#xE711;" />
                                            </Button.Content>

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Background="Transparent"
                                                    Content="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/CancelTask')}"
                                                    Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                            </ToolTipService.ToolTip>
                                        </Button>

                                        <Button
                                            Grid.Column="2"
                                            Width="Auto"
                                            Height="Auto"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Command="{StaticResource RemoveTaskCommand}"
                                            CommandParameter="{x:Bind}"
                                            Style="{StaticResource AlternateCloseButtonStyle}"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageRepairProgressState(PackageRepairProgressState, deployment:PackageRepairProgressState.Finished, x:False), Mode=OneWay}">

                                            <Button.Content>
                                                <FontIcon
                                                    Margin="4"
                                                    FontSize="16"
                                                    Glyph="&#xE74D;" />
                                            </Button.Content>

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Background="Transparent"
                                                    Content="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/RemoveTask')}"
                                                    Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                            </ToolTipService.ToolTip>
                                        </Button>
                                    </Grid>

                                    <!--  更新应用  -->
                                    <Grid x:Name="UpgradeGrid" x:Load="{x:Bind x:Object.Equals(PackageOperationKind, enum:PackageOperationKind.Upgrade)}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Grid.ContextFlyout>
                                            <MenuFlyout Placement="Bottom">
                                                <MenuFlyoutItem
                                                    Command="{StaticResource OpenPackageFolderCommand}"
                                                    CommandParameter="{x:Bind PackagePath}"
                                                    Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/OpenPackageFolder')}">

                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE8B7;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                            </MenuFlyout>
                                        </Grid.ContextFlyout>

                                        <FontIcon
                                            Grid.Column="0"
                                            Margin="0,0,12,0"
                                            FontSize="16"
                                            Glyph="&#xE898;" />

                                        <Grid
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            RowSpacing="2">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
                                                    Grid.Column="0"
                                                    MinWidth="50"
                                                    Margin="0,0,5,0"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    FontSize="14"
                                                    TextAlignment="Left"
                                                    TextTrimming="CharacterEllipsis">

                                                    <Run Text="{x:Bind AppName}" />
                                                    <Run Text=" - " />
                                                    <Run Text="{x:Bind AppVersion}" />

                                                    <ToolTipService.ToolTip>
                                                        <ToolTip
                                                            MaxWidth="9999"
                                                            Background="Transparent"
                                                            Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}">

                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto" />
                                                                    <RowDefinition Height="Auto" />
                                                                </Grid.RowDefinitions>

                                                                <TextBlock Grid.Row="0">
                                                                    <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/AppName')}" />
                                                                    <Run Text="{x:Bind AppName}" />
                                                                </TextBlock>

                                                                <TextBlock Grid.Row="1">
                                                                    <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/UpgradeVersion')}" />
                                                                    <Run Text="{x:Bind AppVersion}" />
                                                                </TextBlock>
                                                            </Grid>
                                                        </ToolTip>
                                                    </ToolTipService.ToolTip>
                                                </TextBlock>

                                                <Grid Grid.Column="1" Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageOperationResultKind(PackageOperationResultKind, enum:PackageOperationResultKind.Normal), Mode=OneWay}">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock
                                                        Grid.Column="0"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        Text="{x:Bind x:String.Format('{0}%', PackageOperationProgress), Mode=OneWay}"
                                                        TextAlignment="Right">

                                                        <ToolTipService.ToolTip>
                                                            <ToolTip
                                                                MaxWidth="9999"
                                                                Background="Transparent"
                                                                Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}">

                                                                <TextBlock>
                                                                    <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/PackageOperationProgress')}" />
                                                                    <Run Text="{x:Bind x:String.Format('{0}%', PackageOperationProgress), Mode=OneWay}" />
                                                                </TextBlock>
                                                            </ToolTip>
                                                        </ToolTipService.ToolTip>
                                                    </TextBlock>

                                                    <TextBlock
                                                        Grid.Column="1"
                                                        Margin="2,0,2,0"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        Text="|"
                                                        TextAlignment="Right"
                                                        Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageUpgradeProgressState(PackageInstallProgressState, deployment:PackageInstallProgressState.Downloading, x:False), Mode=OneWay}" />

                                                    <TextBlock
                                                        Grid.Column="2"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        Text="{x:Bind DownloadedFileSize, Mode=OneWay}"
                                                        TextAlignment="Right"
                                                        Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageUpgradeProgressState(PackageInstallProgressState, deployment:PackageInstallProgressState.Downloading, x:False), Mode=OneWay}">

                                                        <ToolTipService.ToolTip>
                                                            <ToolTip
                                                                MaxWidth="9999"
                                                                Background="Transparent"
                                                                Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}">

                                                                <TextBlock>
                                                                    <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/DownloadedFileSize')}" />
                                                                    <Run Text="{x:Bind DownloadedFileSize, Mode=OneWay}" />
                                                                </TextBlock>
                                                            </ToolTip>
                                                        </ToolTipService.ToolTip>
                                                    </TextBlock>

                                                    <TextBlock
                                                        Grid.Column="3"
                                                        Margin="2,0,2,0"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        Text="|"
                                                        TextAlignment="Right" />

                                                    <TextBlock
                                                        Grid.Column="4"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        Text="{x:Bind TotalFileSize, Mode=OneWay}"
                                                        TextAlignment="Right">

                                                        <ToolTipService.ToolTip>
                                                            <ToolTip
                                                                MaxWidth="9999"
                                                                Background="Transparent"
                                                                Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}">

                                                                <TextBlock>
                                                                    <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/TotalFileSize')}" />
                                                                    <Run Text="{x:Bind TotalFileSize, Mode=OneWay}" />
                                                                </TextBlock>
                                                            </ToolTip>
                                                        </ToolTipService.ToolTip>
                                                    </TextBlock>
                                                </Grid>
                                            </Grid>

                                            <Grid Grid.Row="1" ColumnSpacing="5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Grid Grid.Column="0" Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageOperationResultKind(PackageOperationResultKind, enum:PackageOperationResultKind.Normal), Mode=OneWay}">
                                                    <TextBlock
                                                        HorizontalAlignment="Left"
                                                        FontSize="14"
                                                        Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/UpgradeQueued')}"
                                                        Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageUpgradeProgressState(PackageInstallProgressState, deployment:PackageInstallProgressState.Queued, x:False), Mode=OneWay}" />

                                                    <TextBlock
                                                        HorizontalAlignment="Left"
                                                        FontSize="14"
                                                        Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/Downloading')}"
                                                        Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageUpgradeProgressState(PackageInstallProgressState, deployment:PackageInstallProgressState.Downloading, x:False), Mode=OneWay}" />

                                                    <TextBlock
                                                        HorizontalAlignment="Left"
                                                        FontSize="14"
                                                        Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/Upgrading')}"
                                                        Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageUpgradeProgressState(PackageInstallProgressState, deployment:PackageInstallProgressState.Installing, x:False), Mode=OneWay}" />

                                                    <TextBlock
                                                        HorizontalAlignment="Left"
                                                        FontSize="14"
                                                        Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/UpgradePostInstall')}"
                                                        Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageUpgradeProgressState(PackageInstallProgressState, deployment:PackageInstallProgressState.PostInstall, x:False), Mode=OneWay}" />

                                                    <TextBlock
                                                        HorizontalAlignment="Left"
                                                        FontSize="14"
                                                        Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/UpgradeFinished')}"
                                                        Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageUpgradeProgressState(PackageInstallProgressState, deployment:PackageInstallProgressState.Finished, x:False), Mode=OneWay}" />
                                                </Grid>

                                                <TextBlock
                                                    Grid.Column="0"
                                                    HorizontalAlignment="Left"
                                                    FontSize="14"
                                                    Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/Canceling')}"
                                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageOperationResultKind(PackageOperationResultKind, enum:PackageOperationResultKind.Cancel), Mode=OneWay}" />

                                                <TextBlock
                                                    Grid.Column="0"
                                                    HorizontalAlignment="Left"
                                                    FontSize="14"
                                                    Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/UpgradeFailed')}"
                                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageOperationResultKind(PackageOperationResultKind, enum:PackageOperationResultKind.Failed), Mode=OneWay}">

                                                    <ToolTipService.ToolTip>
                                                        <ToolTip
                                                            MaxWidth="9999"
                                                            Background="Transparent"
                                                            Content="{x:Bind PackageOperationFailedContent, Mode=OneWay}"
                                                            Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                                    </ToolTipService.ToolTip>
                                                </TextBlock>

                                                <ProgressBar
                                                    Grid.Column="1"
                                                    Margin="5,0,0,0"
                                                    VerticalAlignment="Center"
                                                    IsIndeterminate="{x:Bind converter:ValueCheckConverterHelper.IsPackageUpgrading(PackageInstallProgressState), Mode=OneWay}"
                                                    ShowError="{x:Bind x:Object.Equals(PackageOperationResultKind, enum:PackageOperationResultKind.Failed), Mode=OneWay}"
                                                    ShowPaused="{x:Bind x:Object.Equals(PackageOperationResultKind, enum:PackageOperationResultKind.Cancel), Mode=OneWay}"
                                                    Value="{x:Bind PackageOperationProgress, Mode=OneWay}" />
                                            </Grid>
                                        </Grid>

                                        <Button
                                            Grid.Column="2"
                                            Width="Auto"
                                            Height="Auto"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Command="{StaticResource CancelTaskCommand}"
                                            CommandParameter="{x:Bind}"
                                            IsEnabled="{x:Bind x:Object.Equals(PackageOperationResultKind, enum:PackageOperationResultKind.Normal), Mode=OneWay}"
                                            Style="{StaticResource AlternateCloseButtonStyle}"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageUpgradeProgressState(PackageInstallProgressState, deployment:PackageInstallProgressState.Finished, x:True), Mode=OneWay}">

                                            <Button.Content>
                                                <FontIcon
                                                    Margin="4"
                                                    FontSize="16"
                                                    Glyph="&#xE711;" />
                                            </Button.Content>

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Background="Transparent"
                                                    Content="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/CancelTask')}"
                                                    Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                            </ToolTipService.ToolTip>
                                        </Button>

                                        <Button
                                            Grid.Column="2"
                                            Width="Auto"
                                            Height="Auto"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Command="{StaticResource RemoveTaskCommand}"
                                            CommandParameter="{x:Bind}"
                                            Style="{StaticResource AlternateCloseButtonStyle}"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageUpgradeProgressState(PackageInstallProgressState, deployment:PackageInstallProgressState.Finished, x:False), Mode=OneWay}">

                                            <Button.Content>
                                                <FontIcon
                                                    Margin="4"
                                                    FontSize="16"
                                                    Glyph="&#xE74D;" />
                                            </Button.Content>

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Background="Transparent"
                                                    Content="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/RemoveTask')}"
                                                    Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                            </ToolTipService.ToolTip>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Grid>
        </SplitView.Pane>
    </SplitView>
</Page>
