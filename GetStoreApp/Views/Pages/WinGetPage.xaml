<Page
    x:Class="GetStoreApp.Views.Pages.WinGetPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:backdrophelper="using:GetStoreApp.Helpers.Backdrop"
    xmlns:converter="using:GetStoreApp.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:deployment="using:Microsoft.Management.Deployment"
    xmlns:enum="using:GetStoreApp.Extensions.DataType.Enums"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:GetStoreApp.Models"
    xmlns:rootservice="using:GetStoreApp.Services.Root"
    xmlns:settingsservice="using:GetStoreApp.Services.Settings"
    xmlns:system="using:System"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <TransitionCollection x:Name="SuppressNavigationTransitionCollection">
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <SuppressNavigationTransitionInfo />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>

        <TransitionCollection x:Name="LeftSlideNavigationTransitionCollection">
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <SlideNavigationTransitionInfo Effect="FromLeft" />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>

        <TransitionCollection x:Name="RightSlideNavigationTransitionCollection">
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <SlideNavigationTransitionInfo Effect="FromRight" />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>

        <XamlUICommand x:Name="CancelTaskCommand" ExecuteRequested="{x:Bind OnCancelTaskExecuteRequested}" />
        <XamlUICommand x:Name="RemoveTaskCommand" ExecuteRequested="{x:Bind OnRemoveTaskExecuteRequested}" />
        <XamlUICommand x:Name="OpenPackageFolderCommand" ExecuteRequested="{x:Bind OnOpenPackageFolderExecuteRequested}" />
    </Page.Resources>

    <SplitView
        x:Name="WinGetSplitView"
        DisplayMode="Overlay"
        PaneBackground="Transparent"
        PanePlacement="Right">

        <SplitView.Content>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  WinGet 程序包控制栏  -->
                <SelectorBar
                    x:Name="WinGetSelectorBar"
                    Grid.Row="0"
                    Margin="20,6,30,3"
                    Padding="0"
                    HorizontalAlignment="Left"
                    SelectedItem="{x:Bind SelectedItem, Mode=OneWay}">

                    <SelectorBarItem
                        Padding="12,5"
                        FontSize="22"
                        IsTapEnabled="True"
                        Tag="{x:Bind PageList[0]}"
                        Tapped="{x:Bind OnSelectorBarTapped}"
                        Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/SearchApps')}" />

                    <SelectorBarItem
                        Padding="12,5"
                        FontSize="22"
                        IsTapEnabled="True"
                        Tag="{x:Bind PageList[1]}"
                        Tapped="{x:Bind OnSelectorBarTapped}"
                        Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/InstalledApps')}" />

                    <SelectorBarItem
                        Padding="12,5"
                        FontSize="22"
                        IsTapEnabled="True"
                        Tag="{x:Bind PageList[2]}"
                        Tapped="{x:Bind OnSelectorBarTapped}"
                        Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/UpgradableApps')}" />
                </SelectorBar>

                <!--  WinGet 程序包内容  -->
                <Frame
                    x:Name="WinGetFrame"
                    Grid.Row="1"
                    Navigated="{x:Bind OnNavigated}"
                    NavigationFailed="{x:Bind OnNavigationFailed}" />
            </Grid>
        </SplitView.Content>

        <SplitView.Pane>
            <Grid>
                <!--  使用说明  -->
                <Grid
                    Margin="0,10,0,0"
                    Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                    CornerRadius="4,0,0,0"
                    Visibility="{x:Bind CheckWinGetPaneKindState(WinGetPaneKind, enum:WinGetPaneKind.UseInstruction), Mode=OneWay}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid
                        Grid.Row="0"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="0,0,0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <FontIcon
                            Grid.Column="0"
                            Margin="16,0,6,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Glyph="&#xE946;" />

                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/UseInstruction')}" />

                        <Button
                            Grid.Column="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Click="{x:Bind OnCloseClicked}"
                            Style="{StaticResource AlternateCloseButtonStyle}">

                            <Button.Content>
                                <FontIcon
                                    Margin="4"
                                    FontSize="16"
                                    Glyph="&#xE711;" />
                            </Button.Content>

                            <ToolTipService.ToolTip>
                                <ToolTip
                                    MaxWidth="9999"
                                    Background="Transparent"
                                    Content="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/Close')}"
                                    Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                            </ToolTipService.ToolTip>
                        </Button>
                    </Grid>

                    <ScrollViewer
                        Grid.Row="1"
                        HorizontalScrollBarVisibility="Disabled"
                        HorizontalScrollMode="Disabled"
                        VerticalScrollBarVisibility="Visible"
                        VerticalScrollMode="Enabled">

                        <Grid Margin="0,0,0,30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Margin="16,10,16,10"
                                FontSize="15"
                                FontWeight="Normal"
                                Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/WinGetPackage')}"
                                TextAlignment="Left" />

                            <TextBlock
                                Grid.Row="1"
                                Margin="16,0,16,5"
                                FontSize="14"
                                FontWeight="Normal"
                                Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/WinGetPackageDescription1')}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />

                            <TextBlock
                                Grid.Row="2"
                                Margin="16,0,16,5"
                                FontSize="14"
                                FontWeight="Normal"
                                Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/WinGetPackageDescription2')}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />

                            <TextBlock
                                Grid.Row="3"
                                Margin="16,0,16,5"
                                FontSize="14"
                                FontWeight="Normal"
                                Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/WinGetPackageDescription3')}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />

                            <StackPanel
                                Grid.Row="4"
                                Margin="16,0,16,5"
                                Spacing="5">

                                <TextBlock>
                                    <Hyperlink
                                        Click="{x:Bind OnLearnWinGetClicked}"
                                        NavigateUri="https://learn.microsoft.com/windows/package-manager"
                                        UnderlineStyle="None">
                                        <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/LearnWinGet')}" />
                                    </Hyperlink>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </Grid>

                <!--  任务管理  -->
                <Grid
                    Margin="0,10,0,0"
                    Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                    CornerRadius="4,0,0,0"
                    Visibility="{x:Bind CheckWinGetPaneKindState(WinGetPaneKind, enum:WinGetPaneKind.TaskManager), Mode=OneWay}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid
                        Grid.Row="0"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="0,0,0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <FontIcon
                            Grid.Column="0"
                            Margin="16,0,6,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Glyph="&#xE71D;" />

                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/TaskManager')}" />

                        <InfoBadge
                            Grid.Column="2"
                            Margin="6,2,0,0"
                            HorizontalAlignment="Left"
                            Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(PackageOperationCollection.Count), Mode=OneWay}"
                            Value="{x:Bind PackageOperationCollection.Count, Mode=OneWay}" />

                        <Button
                            Grid.Column="3"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Click="{x:Bind OnRemoveFinishedTaskClicked}"
                            IsEnabled="{x:Bind system:Convert.ToBoolean(PackageOperationCollection.Count), Mode=OneWay}"
                            Style="{StaticResource AlternateCloseButtonStyle}">

                            <Button.Content>
                                <FontIcon
                                    Margin="4"
                                    FontSize="16"
                                    Glyph="&#xE74D;" />
                            </Button.Content>

                            <ToolTipService.ToolTip>
                                <ToolTip
                                    MaxWidth="9999"
                                    Background="Transparent"
                                    Content="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/RemoveFinishedTask')}"
                                    Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                            </ToolTipService.ToolTip>
                        </Button>

                        <Button
                            Grid.Column="4"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Click="{x:Bind OnCloseClicked}"
                            Style="{StaticResource AlternateCloseButtonStyle}">

                            <Button.Content>
                                <FontIcon
                                    Margin="4"
                                    FontSize="16"
                                    Glyph="&#xE711;" />
                            </Button.Content>

                            <ToolTipService.ToolTip>
                                <ToolTip
                                    MaxWidth="9999"
                                    Background="Transparent"
                                    Content="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/Close')}"
                                    Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                            </ToolTipService.ToolTip>
                        </Button>
                    </Grid>

                    <Grid
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(PackageOperationCollection.Count), Mode=OneWay}">

                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/PackageOperationEmpty')}"
                            TextAlignment="Center"
                            TextWrapping="WrapWholeWords" />
                    </Grid>

                    <ListView
                        Grid.Row="1"
                        Margin="0,2,0,0"
                        Padding="0,0,0,30"
                        ItemsSource="{x:Bind PackageOperationCollection}"
                        SelectionMode="None"
                        Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(PackageOperationCollection.Count), Mode=OneWay}">

                        <ListView.ItemContainerStyle>
                            <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="MinHeight" Value="0" />
                                <Setter Property="Padding" Value="0" />
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ItemsControl.ItemContainerTransitions>
                            <TransitionCollection />
                        </ItemsControl.ItemContainerTransitions>

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="model:PackageOperationModel">
                                <Grid
                                    Height="60"
                                    Margin="2,0,2,2"
                                    Padding="16,0,6,0"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource ControlCornerRadius}">

                                    <!--  下载应用  -->
                                    <Grid x:Name="DownloadGrid" x:Load="{x:Bind x:Object.Equals(PackageOperationKind, enum:PackageOperationKind.Download)}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Grid.ContextFlyout>
                                            <MenuFlyout Placement="Bottom">
                                                <MenuFlyoutItem
                                                    Command="{StaticResource OpenPackageFolderCommand}"
                                                    CommandParameter="{x:Bind PackagePath}"
                                                    Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/OpenPackageFolder')}">

                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE8B7;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                            </MenuFlyout>
                                        </Grid.ContextFlyout>

                                        <FontIcon
                                            Grid.Column="0"
                                            Margin="0,0,12,0"
                                            FontSize="16"
                                            Glyph="&#xE896;" />

                                        <Grid
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            RowSpacing="2">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
                                                    Grid.Column="0"
                                                    MinWidth="50"
                                                    Margin="0,0,5,0"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    FontSize="14"
                                                    TextAlignment="Left"
                                                    TextTrimming="CharacterEllipsis">

                                                    <Run Text="{x:Bind AppName}" />
                                                    <Run Text=" - " />
                                                    <Run Text="{x:Bind AppVersion}" />

                                                    <ToolTipService.ToolTip>
                                                        <ToolTip
                                                            MaxWidth="9999"
                                                            Background="Transparent"
                                                            Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}">

                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto" />
                                                                    <RowDefinition Height="Auto" />
                                                                </Grid.RowDefinitions>

                                                                <TextBlock Grid.Row="0">
                                                                    <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/AppName')}" />
                                                                    <Run Text="{x:Bind AppName}" />
                                                                </TextBlock>

                                                                <TextBlock Grid.Row="1">
                                                                    <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/DownloadVersion')}" />
                                                                    <Run Text="{x:Bind AppVersion}" />
                                                                </TextBlock>
                                                            </Grid>
                                                        </ToolTip>
                                                    </ToolTipService.ToolTip>
                                                </TextBlock>

                                                <Grid Grid.Column="1" Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageOperationResultKind(PackageOperationResultKind, enum:PackageOperationResultKind.Normal), Mode=OneWay}">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock
                                                        Grid.Column="0"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        Text="{x:Bind x:String.Format('{0}%', PackageOperationProgress), Mode=OneWay}"
                                                        TextAlignment="Right">

                                                        <ToolTipService.ToolTip>
                                                            <ToolTip
                                                                MaxWidth="9999"
                                                                Background="Transparent"
                                                                Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}">

                                                                <TextBlock>
                                                                    <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/PackageOperationProgress')}" />
                                                                    <Run Text="{x:Bind x:String.Format('{0}%', PackageOperationProgress), Mode=OneWay}" />
                                                                </TextBlock>
                                                            </ToolTip>
                                                        </ToolTipService.ToolTip>
                                                    </TextBlock>

                                                    <TextBlock
                                                        Grid.Column="1"
                                                        Margin="2,0,2,0"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        Text="|"
                                                        TextAlignment="Right"
                                                        Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageDownloadProgressState(PackageDownloadProgressState, deployment:PackageDownloadProgressState.Downloading, x:False), Mode=OneWay}" />

                                                    <TextBlock
                                                        Grid.Column="2"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        Text="{x:Bind DownloadedFileSize, Mode=OneWay}"
                                                        TextAlignment="Right"
                                                        Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageDownloadProgressState(PackageDownloadProgressState, deployment:PackageDownloadProgressState.Downloading, x:False), Mode=OneWay}">

                                                        <ToolTipService.ToolTip>
                                                            <ToolTip
                                                                MaxWidth="9999"
                                                                Background="Transparent"
                                                                Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}">

                                                                <TextBlock>
                                                                    <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/DownloadedFileSize')}" />
                                                                    <Run Text="{x:Bind DownloadedFileSize, Mode=OneWay}" />
                                                                </TextBlock>
                                                            </ToolTip>
                                                        </ToolTipService.ToolTip>
                                                    </TextBlock>

                                                    <TextBlock
                                                        Grid.Column="3"
                                                        Margin="2,0,2,0"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        Text="|"
                                                        TextAlignment="Right" />

                                                    <TextBlock
                                                        Grid.Column="4"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        Text="{x:Bind TotalFileSize, Mode=OneWay}"
                                                        TextAlignment="Right">

                                                        <ToolTipService.ToolTip>
                                                            <ToolTip
                                                                MaxWidth="9999"
                                                                Background="Transparent"
                                                                Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}">

                                                                <TextBlock>
                                                                    <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/TotalFileSize')}" />
                                                                    <Run Text="{x:Bind TotalFileSize, Mode=OneWay}" />
                                                                </TextBlock>
                                                            </ToolTip>
                                                        </ToolTipService.ToolTip>
                                                    </TextBlock>
                                                </Grid>
                                            </Grid>

                                            <Grid Grid.Row="1" ColumnSpacing="5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Grid Grid.Column="0" Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageOperationResultKind(PackageOperationResultKind, enum:PackageOperationResultKind.Normal), Mode=OneWay}">
                                                    <TextBlock
                                                        HorizontalAlignment="Left"
                                                        FontSize="14"
                                                        Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/DownloadQueued')}"
                                                        Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageDownloadProgressState(PackageDownloadProgressState, deployment:PackageDownloadProgressState.Queued, x:False), Mode=OneWay}" />

                                                    <TextBlock
                                                        HorizontalAlignment="Left"
                                                        FontSize="14"
                                                        Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/Downloading')}"
                                                        Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageDownloadProgressState(PackageDownloadProgressState, deployment:PackageDownloadProgressState.Downloading, x:False), Mode=OneWay}" />

                                                    <TextBlock
                                                        HorizontalAlignment="Left"
                                                        FontSize="14"
                                                        Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/DownloadFinished')}"
                                                        Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageDownloadProgressState(PackageDownloadProgressState, deployment:PackageDownloadProgressState.Finished, x:False), Mode=OneWay}" />
                                                </Grid>

                                                <TextBlock
                                                    Grid.Column="0"
                                                    HorizontalAlignment="Left"
                                                    FontSize="14"
                                                    Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/Canceling')}"
                                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageOperationResultKind(PackageOperationResultKind, enum:PackageOperationResultKind.Cancel), Mode=OneWay}" />

                                                <TextBlock
                                                    Grid.Column="0"
                                                    HorizontalAlignment="Left"
                                                    FontSize="14"
                                                    Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/DownloadFailed')}"
                                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageOperationResultKind(PackageOperationResultKind, enum:PackageOperationResultKind.Failed), Mode=OneWay}">

                                                    <ToolTipService.ToolTip>
                                                        <ToolTip
                                                            MaxWidth="9999"
                                                            Background="Transparent"
                                                            Content="{x:Bind PackageOperationFailedContent, Mode=OneWay}"
                                                            Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                                    </ToolTipService.ToolTip>
                                                </TextBlock>

                                                <ProgressBar
                                                    Grid.Column="1"
                                                    Margin="5,0,0,0"
                                                    VerticalAlignment="Center"
                                                    IsIndeterminate="{x:Bind converter:ValueCheckConverterHelper.IsPackageDownloading(PackageDownloadProgressState), Mode=OneWay}"
                                                    ShowError="{x:Bind x:Object.Equals(PackageOperationResultKind, enum:PackageOperationResultKind.Failed), Mode=OneWay}"
                                                    ShowPaused="{x:Bind x:Object.Equals(PackageOperationResultKind, enum:PackageOperationResultKind.Cancel), Mode=OneWay}"
                                                    Value="{x:Bind PackageOperationProgress, Mode=OneWay}" />
                                            </Grid>
                                        </Grid>

                                        <Button
                                            Grid.Column="2"
                                            Width="Auto"
                                            Height="Auto"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Command="{StaticResource CancelTaskCommand}"
                                            CommandParameter="{x:Bind}"
                                            IsEnabled="{x:Bind x:Object.Equals(PackageOperationResultKind, enum:PackageOperationResultKind.Normal), Mode=OneWay}"
                                            Style="{StaticResource AlternateCloseButtonStyle}"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageDownloadProgressState(PackageDownloadProgressState, deployment:PackageDownloadProgressState.Finished, x:True), Mode=OneWay}">

                                            <Button.Content>
                                                <FontIcon
                                                    Margin="4"
                                                    FontSize="16"
                                                    Glyph="&#xE711;" />
                                            </Button.Content>

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Background="Transparent"
                                                    Content="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/CancelTask')}"
                                                    Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                            </ToolTipService.ToolTip>
                                        </Button>

                                        <Button
                                            Grid.Column="2"
                                            Width="Auto"
                                            Height="Auto"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Command="{StaticResource RemoveTaskCommand}"
                                            CommandParameter="{x:Bind}"
                                            Style="{StaticResource AlternateCloseButtonStyle}"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageDownloadProgressState(PackageDownloadProgressState, deployment:PackageDownloadProgressState.Finished, x:False), Mode=OneWay}">

                                            <Button.Content>
                                                <FontIcon
                                                    Margin="4"
                                                    FontSize="16"
                                                    Glyph="&#xE74D;" />
                                            </Button.Content>

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Background="Transparent"
                                                    Content="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/RemoveTask')}"
                                                    Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                            </ToolTipService.ToolTip>
                                        </Button>
                                    </Grid>

                                    <!--  安装应用  -->
                                    <Grid x:Name="InstallGrid" x:Load="{x:Bind x:Object.Equals(PackageOperationKind, enum:PackageOperationKind.Install)}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Grid.ContextFlyout>
                                            <MenuFlyout Placement="Bottom">
                                                <MenuFlyoutItem
                                                    Command="{StaticResource OpenPackageFolderCommand}"
                                                    CommandParameter="{x:Bind PackagePath}"
                                                    Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/OpenPackageFolder')}">

                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE8B7;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                            </MenuFlyout>
                                        </Grid.ContextFlyout>

                                        <FontIcon
                                            Grid.Column="0"
                                            Margin="0,0,12,0"
                                            FontSize="16"
                                            Glyph="&#xE710;" />

                                        <Grid
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            RowSpacing="2">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
