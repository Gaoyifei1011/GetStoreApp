<Page
    x:Class="GetStoreApp.Views.Pages.SettingsDownloadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:backdrophelper="using:GetStoreApp.Helpers.Backdrop"
    xmlns:converter="using:GetStoreApp.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:roothelper="using:GetStoreApp.Helpers.Root"
    xmlns:rootservice="using:GetStoreApp.Services.Root"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <ScrollViewer
        HorizontalScrollBarVisibility="Disabled"
        HorizontalScrollMode="Disabled"
        VerticalScrollBarVisibility="Auto"
        VerticalScrollMode="Enabled">

        <Grid Margin="30,0,30,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  下载文件路径设置  -->
            <Grid
                Grid.Row="0"
                Height="60"
                Margin="0,0,0,2"
                Padding="16,0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <FontIcon
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    FontSize="16"
                    Glyph="&#xE8B7;" />

                <StackPanel
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Orientation="Vertical">

                    <TextBlock
                        HorizontalAlignment="Left"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/FileStoragePath')}" />

                    <TextBlock
                        HorizontalAlignment="Left"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="NoWrap">

                        <Hyperlink Click="{x:Bind OnDownloadOpenFolderClicked}" UnderlineStyle="None">
                            <Run Text="{x:Bind DownloadFolder, Mode=OneWay}" />
                        </Hyperlink>

                        <ToolTipService.ToolTip>
                            <ToolTip
                                MaxWidth="9999"
                                Background="Transparent"
                                Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}">

                                <StackPanel HorizontalAlignment="Stretch">
                                    <TextBlock Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/FileStoragePath')}" />
                                    <TextBlock Text="{x:Bind DownloadFolder, Mode=OneWay}" />
                                    <MenuFlyoutSeparator Margin="4,3" />
                                    <TextBlock Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/OpenFolder')}" />
                                </StackPanel>
                            </ToolTip>
                        </ToolTipService.ToolTip>
                    </TextBlock>
                </StackPanel>

                <DropDownButton
                    Grid.Column="2"
                    Margin="6,0,0,0"
                    Content="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/ChangeFolder')}">

                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem
                                Click="{x:Bind OnDownloadChangeFolderClicked}"
                                Tag="AppCache"
                                Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/AppCacheFolder')}">

                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xECAA;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>

                            <MenuFlyoutItem
                                Click="{x:Bind OnDownloadChangeFolderClicked}"
                                Tag="Download"
                                Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/DownloadFolder')}">

                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE896;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>

                            <MenuFlyoutItem
                                Click="{x:Bind OnDownloadChangeFolderClicked}"
                                Tag="Desktop"
                                Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/DesktopFolder')}">

                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE7F4;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>

                            <MenuFlyoutSeparator />

                            <MenuFlyoutItem
                                Click="{x:Bind OnDownloadChangeFolderClicked}"
                                Tag="Custom"
                                Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/Custom')}" />
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </Grid>

            <!--  每次下载时手动设置下载目录  -->
            <Grid
                Grid.Row="1"
                Height="60"
                Margin="0,0,0,2"
                Padding="16,0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <FontIcon
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    FontSize="16"
                    Glyph="&#xED25;" />

                <StackPanel
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Orientation="Vertical">

                    <TextBlock
                        HorizontalAlignment="Left"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/ManualSetDownloadFolder')}" />

                    <TextBlock
                        x:Name="ManualSetDownloadFolderDescription"
                        HorizontalAlignment="Left"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/ManualSetDownloadFolderDescription')}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="NoWrap">

                        <ToolTipService.ToolTip>
                            <ToolTip
                                MaxWidth="9999"
                                Background="Transparent"
                                Content="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/ManualSetDownloadFolderDescription')}"
                                Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}"
                                Visibility="{x:Bind ManualSetDownloadFolderDescription.IsTextTrimmed, Mode=OneWay}" />
                        </ToolTipService.ToolTip>
                    </TextBlock>
                </StackPanel>

                <StackPanel
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <TextBlock
                        VerticalAlignment="Center"
                        Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/ManualSetDownloadFolderOffContent')}"
                        Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(ManualSetDownloadFolder), Mode=OneWay}" />

                    <TextBlock
                        VerticalAlignment="Center"
                        Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/ManualSetDownloadFolderOnContent')}"
                        Visibility="{x:Bind ManualSetDownloadFolder, Mode=OneWay}" />

                    <ToggleSwitch
                        MinWidth="0"
                        Margin="10,0,-10,-2"
                        IsOn="{x:Bind ManualSetDownloadFolder, Mode=OneWay}"
                        OffContent=""
                        OnContent=""
                        Toggled="{x:Bind OnManualSetDownloadFolderToggled}" />
                </StackPanel>
            </Grid>

            <!--  下载引擎方式设置  -->
            <Grid
                Grid.Row="2"
                Height="60"
                Margin="0,0,0,2"
                Padding="16,0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <FontIcon
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    FontSize="16"
                    Glyph="&#xE896;" />

                <StackPanel
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Orientation="Vertical">

                    <TextBlock
                        HorizontalAlignment="Left"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/DoEngineMode')}" />

                    <TextBlock
                        x:Name="DoEngineModeDescription"
                        HorizontalAlignment="Left"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/DoEngineModeDescription')}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="NoWrap">

                        <ToolTipService.ToolTip>
                            <ToolTip
                                MaxWidth="9999"
                                Background="Transparent"
                                Content="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/DoEngineModeDescription')}"
                                Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}"
                                Visibility="{x:Bind DoEngineModeDescription.IsTextTrimmed, Mode=OneWay}" />
                        </ToolTipService.ToolTip>
                    </TextBlock>
                </StackPanel>

                <HyperlinkButton
                    Grid.Column="2"
                    Margin="0,0,6,0"
                    VerticalAlignment="Center"
                    Click="{x:Bind OnLearnDoEngineClicked}"
                    Content="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/LearnDoEngine')}" />

                <DropDownButton
                    Grid.Column="3"
                    VerticalAlignment="Center"
                    Content="{x:Bind DoEngineMode.Value, Mode=OneWay}">

                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <RadioMenuFlyoutItem
                                Click="{x:Bind OnDoEngineModeSelectClicked}"
                                GroupName="DoEngineModeModeRadioGroup"
                                IsChecked="{x:Bind x:String.Equals(DoEngineMode.Key, DoEngineModeList[0].Key), Mode=OneWay}"
                                Text="{x:Bind DoEngineModeList[0].Value}"
                                Visibility="{x:Bind roothelper:InfoHelper.IsDeliveryOptimizationEnabled}">

                                <RadioMenuFlyoutItem.Tag>
                                    <x:Int32>0</x:Int32>
                                </RadioMenuFlyoutItem.Tag>
                            </RadioMenuFlyoutItem>

                            <RadioMenuFlyoutItem
                                Click="{x:Bind OnDoEngineModeSelectClicked}"
                                GroupName="DoEngineModeModeRadioGroup"
                                IsChecked="{x:Bind x:String.Equals(DoEngineMode.Key, DoEngineModeList[1].Key), Mode=OneWay}"
                                Text="{x:Bind DoEngineModeList[1].Value}">

                                <RadioMenuFlyoutItem.Tag>
                                    <x:Int32>1</x:Int32>
                                </RadioMenuFlyoutItem.Tag>
                            </RadioMenuFlyoutItem>

                            <RadioMenuFlyoutItem
                                Click="{x:Bind OnDoEngineModeSelectClicked}"
                                GroupName="DoEngineModeModeRadioGroup"
                                IsChecked="{x:Bind x:String.Equals(DoEngineMode.Key, DoEngineModeList[2].Key), Mode=OneWay}"
                                Text="{x:Bind DoEngineModeList[2].Value}">

                                <RadioMenuFlyoutItem.Tag>
                                    <x:Int32>2</x:Int32>
                                </RadioMenuFlyoutItem.Tag>
                            </RadioMenuFlyoutItem>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </Grid>

            <!--  传递优化设置  -->
            <Grid
                Grid.Row="3"
                Height="60"
                Margin="0,0,0,2"
                Padding="16,0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <FontIcon
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    FontSize="16"
                    Glyph="&#xF785;" />

                <StackPanel
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Orientation="Vertical">

                    <TextBlock
                        HorizontalAlignment="Left"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/DeliveryOptimization')}" />

                    <TextBlock
                        x:Name="DeliveryOptimizationDescription"
                        HorizontalAlignment="Left"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/DeliveryOptimizationDescription')}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="NoWrap">

                        <ToolTipService.ToolTip>
                            <ToolTip
                                MaxWidth="9999"
                                Background="Transparent"
                                Content="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/DeliveryOptimizationDescription')}"
                                Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}"
                                Visibility="{x:Bind DeliveryOptimizationDescription.IsTextTrimmed, Mode=OneWay}" />
                        </ToolTipService.ToolTip>
                    </TextBlock>
                </StackPanel>

                <Button
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Click="{x:Bind OnOpenDeliveryOptimizationClicked}"
                    Content="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/Open')}" />
            </Grid>

            <!--  Aria2 下载文件配置  -->
            <Grid
                Grid.Row="4"
                Height="60"
                Margin="0,0,0,2"
                Padding="16,0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <FontIcon
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    FontSize="16"
                    Glyph="&#xE90F;" />

                <StackPanel
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Orientation="Vertical">

                    <TextBlock
                        HorizontalAlignment="Left"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/Aria2Configuration')}" />

                    <TextBlock
                        x:Name="Aria2ConfigurationDescription"
                        HorizontalAlignment="Left"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/Aria2ConfigurationDescription')}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="NoWrap">

                        <ToolTipService.ToolTip>
                            <ToolTip
                                MaxWidth="9999"
                                Background="Transparent"
                                Content="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/Aria2ConfigurationDescription')}"
                                Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}"
                                Visibility="{x:Bind Aria2ConfigurationDescription.IsTextTrimmed, Mode=OneWay}" />
                        </ToolTipService.ToolTip>
                    </TextBlock>
                </StackPanel>

                <Button
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Click="{x:Bind OnConfigurationClicked}"
                    Content="{x:Bind rootservice:ResourceService.GetLocalized('SettingsDownload/Configuration')}" />
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
